import configparser

import streamlit as st
import requests
import streamlit.components.v1 as components
from knowledge_graph.draw import display_graph_pyvis
import time
import json
import logging

# è¯»å–é…ç½®æ–‡ä»¶
config = configparser.ConfigParser()
config.read('config.ini')
backward= config['IP']['backward']

st.title("ğŸ“ ä¸“ä¸šåˆ†æçŸ¥è¯†å›¾è°±")



st.write("ä½ æ˜¯å¦å¯¹ä¸åŒä¸“ä¸šçš„å…·ä½“æ–¹å‘ä¾ç„¶æ¨¡ç³Šä¸æ¸…ï¼Ÿ\n")
st.write("ä½ æ˜¯å¦å¯¹ä¸åŒä¸“ä¸šçš„å…·ä½“æ–¹å‘ä¾ç„¶æ¨¡ç³Šä¸æ¸…ï¼Ÿ\n")
st.write("ä½ æ˜¯å¦å¯¹æœªæ¥çš„ä¸“ä¸šé€‰æ‹©æ„Ÿåˆ°è¿·èŒ«ï¼Œä¸çŸ¥ä»ä½•å…¥æ‰‹ï¼Ÿ\n")

st.write("åˆ«æ‹…å¿ƒï¼Œä¸“ä¸šçŸ¥è¯†å›¾è°±åŠŸèƒ½ä¸ºä½ æŒ‡æ˜æ–¹å‘ï¼åªéœ€è¾“å…¥ä½ çš„å…´è¶£é¢†åŸŸ,æˆ‘ä»¬å°±èƒ½ä¸ºä½ æ¢³ç†å‡ºæ¸…æ™°çš„ç»†åˆ†æ–¹å‘ï¼Œå¸®ä½ æ‰¾åˆ°æœ€é€‚åˆè‡ªå·±çš„å­¦æœ¯è·¯å¾„ã€‚\n")

st.write("       âœ… ç²¾å‡†æ¨èï¼šä»ä¸“ä¸šæˆäºˆé—¨ç±»åˆ°å…·ä½“ä¸“ä¸šåç§°ä¸€é”®è·å–ä¸“ä¸šç»†åˆ†é¢†åŸŸã€‚\n")
st.write("       âœ… é«˜æ•ˆå†³ç­–ï¼šå‘Šåˆ«ä¿¡æ¯è¿‡è½½ï¼Œå¿«é€Ÿé”å®šç ”ç©¶æ–¹å‘ã€‚ \n")
st.write("       âœ… ä¸ªæ€§åŒ–æ¢ç´¢ï¼šæ— è®ºä½ å¯¹ç†å·¥ç§‘æ„Ÿå…´è¶£ï¼Œè¿˜æ˜¯å¯¹æ–‡å²å“²ç»æ„Ÿå…´è¶£ï¼Œéƒ½èƒ½æ‰¾åˆ°å±äºä½ çš„çŸ¥è¯†åœ°å›¾ã€‚\n")

st.write("è¯·è¾“å…¥æ‚¨çš„ä¸“ä¸šåå¥½ï¼ˆå¦‚ï¼šæˆ‘å¯¹ç‰©ç†å­¦æ„Ÿå…´è¶£ï¼‰\n")
st.write("å¼€å¯ä½ çš„ä¸“ä¸šæ¢ç´¢ä¹‹æ—…ï¼Œè®©æœªæ¥çš„é“è·¯æ›´åŠ æ¸…æ™°ï¼\n")
user_input = st.text_input("è¯·è¾“å…¥æ‚¨çš„ä¸“ä¸šåå¥½ï¼ˆå¦‚ï¼šæˆ‘å¯¹ç‰©ç†å­¦æ„Ÿå…´è¶£ï¼‰")
tuples = None

if st.button("è·å–ä¸“ä¸šçŸ¥è¯†å›¾è°±ğŸŠ"):
    if user_input:
        try:
            response = requests.post(
                f"http://{backward}/process",
                json={"text": user_input},
                stream=True,
                timeout=120
            )

            if response.status_code != 200:
                st.error(f"åç«¯é”™è¯¯: {response.status_code}")
                st.stop()

            placeholder = st.empty()
            full_response = ""
            error_flag = False

            # æµå¼è¾“å‡º
            try:
                buffer = ""
                for line in response.iter_lines(decode_unicode=True):
                    if not line:
                        continue
                    if line.startswith("data: "):
                        line = line[6:]
                    if not line.strip():
                        continue
                    try:
                        data = json.loads(line)
                    except Exception:
                        continue
                    if data.get("type") == "content":
                        full_response += data.get("content", "")
                        placeholder.markdown(full_response + "ğŸŠ")
                    elif data.get("type") == "end":
                        placeholder.markdown(full_response)
                        break
                    elif data.get("type") == "error":
                        st.error(data.get("content", "æœªçŸ¥é”™è¯¯"))
                        error_flag = True
                        break
                    # å…¶ä»–ç±»å‹å¿½ç•¥
                    time.sleep(0.01)

                if not error_flag:
                    # åˆ†ææ–‡æœ¬è¾“å‡ºåï¼Œè‡ªåŠ¨è¯·æ±‚çŸ¥è¯†å›¾è°±
                    payload = {"text": user_input, "extra": ""}
                    kg_response = requests.post(f"http://{backward}/get_dynamic_kg", json=payload, timeout=60)
                    if kg_response.status_code == 200:
                        kg_data = kg_response.json().get("kg_data", [])
                        if isinstance(kg_data, list) and kg_data:
                            html_str = display_graph_pyvis(triplets=[tuple(row) for row in kg_data])
                            components.html(html_str, height=600, scrolling=True)
                        else:
                            st.warning("åˆ†æåçŸ¥è¯†å›¾è°±æ•°æ®ä¸ºç©ºï¼")
                    else:
                        st.error(f"çŸ¥è¯†å›¾è°±åç«¯é”™è¯¯: {kg_response.status_code}")

            except Exception as e:
                st.error(f"æµå¼å¤„ç†é”™è¯¯: {str(e)}")

        except requests.exceptions.RequestException as e:
            st.error(f"è¿æ¥åç«¯å¤±è´¥: {e}")
        except Exception as e:
            st.error(f"å¤„ç†è¿‡ç¨‹ä¸­å‡ºç°é”™è¯¯: {str(e)}")
    else:
        st.warning("è¯·è¾“å…¥å†…å®¹å†æäº¤ï¼")